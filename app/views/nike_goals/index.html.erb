<h1>Listing Goals</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Distance</th>
  </tr>

  <% @goals.each do |goal| %>
      <tr>
        <td><%= goal.title %></td>
        <td><%= goal.distance_mi %> miles</td>
        <td><%= link_to 'View', goal, data: { no_turbolink: true } %></td>
      </tr>
  <% end %>
</table>